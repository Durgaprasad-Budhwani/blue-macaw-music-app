{
  "name": "blue-macaw-music-app",
  "version": "1.0.0",
  "description": "This is a sample express application to create music app",
  "author": "Durgaprasad Budhwani <durgaprasad.budhwani@gmail.com>",
  "main": "src/index.js",
  "private": false,
  "license": "MIT",
  "engines": {
    "node": ">=8",
    "yarn": "*"
  },
  "scripts": {
    "precommit": "yarn lint",
    "prestart": "yarn docs",
    "start": "pm2 start ./server/index.js",
    "dev": "nodemon ./server/index.js",
    "lint": "eslint ./server/ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter lcovonly --reporter=text mocha --timeout 20000 --recursive server/tests",
    "test:integration": "mocha --timeout 20000 server/tests/integrations",
    "coverage": "nyc report --reporter=text-lcov && codecov",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "docs": "apidoc -i server -o docs",
    "postdocs": "opn docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./server/index.js",
    "codecov": "codecov"
  },
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv": "^6.1.0",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "glob": "^7.1.3",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "joi": "^10.4.1",
    "lodash": "^4.17.4",
    "method-override": "^3.0.0",
    "mongoose": "^5.2.17",
    "morgan": "^1.8.1",
    "pm2": "^3.0.0",
    "socket.io": "^2.2.0",
    "uuid": "^3.1.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.1.0",
    "coveralls": "^3.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.14.3",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^12.0.2",
    "opn-cli": "^3.1.0",
    "sinon": "^6.0.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^3.0.0"
  }
}
